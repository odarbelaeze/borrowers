<h1>Friends index!</h1>

{{! The context here is the controller (soon to be dead) }}
<h2>
  Total friends: {{model.length}}
</h2>

<table>

  <tbody>
    {{# each model as |friend|}}
    <tr>
      <td>{{link-to friend.fullName 'friends.show' friend}}</td>
      <td><a href="#" {{action 'delete' friend}}>Delete</a></td>
    </tr>
    {{/ each}}
  </tbody>
</table>
